    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vercel/node": "^3.0.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20"
